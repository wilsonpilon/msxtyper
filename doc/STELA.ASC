10 'PROGRAMA ARQUIVO DE TELAS DE TEXTO
20 KEYOFF:BEEP:COLOR 15,4:BASE(0)=0:SCREEN 0
30 FOR F=1TO7:KEY(F)ON:NEXTF
40 PRINT"   PARA ARQUIVAR AS TELAS,PRESSIONE UMADAS FUNCTION KEY'S (1-5) PARA TRABALHARCOM A TELA CORRESPONDENTE."
50 PRINT:PRINT:PRINT"   ESCREVA ALGUMA COISA NAS TELAS E LO_GO APOS PRESSIONE RETURN PARA GRAVAR A SUA TELA."
60 PRINT:PRINT:PRINT"   DEPOIS QUE VOCE DEFINIR AS TELAS DI_GITE F6 PARA VOLTAR A ESTA TELA OU F7 ELOGO APOS A FUNCTION KEY CORRESPONDENTEPARA VER A TELA QUE VOCE ARMAZENOU."
70 ON KEY GOSUB 100,110,120,130,140,150,160:GOTO 70
80 SCREEN 0:LOCATE 0,16:LOCATE0,16:PRINT"TELA";TELA:INPUT A$:CLS
90 LOCATE 0,0:PRINT A$:A$="":GOTO 70
100 BASE(0)=1024:TELA=1:RETURN 80
110 BASE(0)=4096:TELA=2:RETURN 80
120 BASE(0)=5120:TELA=3:RETURN 80
130 BASE(0)=6144:TELA=4:RETURN 80
140 BASE(0)=7168:TELA=5:RETURN 80
150 BASE(0)=0:RETURN 10
160 ON KEY GOSUB 170,180,190,200,210,220,230:GOTO 160
170 BASE(0)=1024:RETURN 160
180 BASE(0)=4096:RETURN 160
190 BASE(0)=5120:RETURN 160
200 BASE(0)=6144:RETURN 160
210 BASE(0)=7168:RETURN 160
220 BASE(0)=0:RETURN 70
230 RETURN

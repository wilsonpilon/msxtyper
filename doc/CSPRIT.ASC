10 SCREEN 1,1
20 PRINT"AS SETAS CONTROLAM O SPRITE."
30 PRINT"A BARRA DE ESPACO SELECIONA  OUTRO CARACTERE."
40 '------------ENTRA CARACTERE-------
50 CLEAR 200: LOCATE 0,3: INPUT"CARACTERE ";A$
60 '--------CALCULA CODIGO------------
70 IF LEN(A$)=2 OR LEFT$(A$,1)=CHR$(1)THEN A=ASC(MID$(A$,2))-64 :GOTO 90
80 A=ASC(A$)
90 DEF FN B=PEEK(A*8+&H1BBF+N)
100 '--------MONTA SPRITE  -----------
110 FOR N=0 TO 7
120 X$=X$+CHR$(FN B)
130 NEXT N
140 SPRITE$(1)=X$
150 '--------CONTROLA SPRITE----------
160 C=128
170 L=96
180 PUTSPRITE1,(C,L),4,1
190 Z=ASC(INPUT$(1))
200 IF Z=28 THEN C=C+1
210 IF Z=29 THEN C=C-1
220 IF Z=30 THEN L=L-1
230 IF Z=31 THEN L=L+1
240 IF Z=32 THEN 50
250 GOTO 180

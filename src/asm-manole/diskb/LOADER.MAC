STR_5:	DEFM 'Wait a minute..$'
STR_6:	DB 10,13
	DEFM 'FONT file not exist$'
STR_7:	DB 10,13
	DEFM 'Skipping INDEX TANK and FONT file$'

FILNMS:	DEFM 'SUPER-X BDY'
FILNM1:	DEFM 'SUPER-X TNK'
FILNM2:	DEFM 'SUPER-X FNT'
TEXT:	DB 3AH,94H,0

XYSAVE:	DS 2

	.DEPHASE

